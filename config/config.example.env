# Application
APP_NAME=Monitoring
APP_ENV=development
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Database
DB_PROVIDER=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=monitoring
DB_USER=monitoring_user
DB_PASSWORD=change_me

# MQTT
MQTT_ENABLED=true
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=mqtt_user
MQTT_PASSWORD=change_me
MQTT_CLIENT_ID=monitoring-backend
MQTT_TOPIC_PREFIX=monitoring
MQTT_QOS=1

# Auto-update
AUTO_UPDATE_ENABLED=false
AUTO_UPDATE_CHANNEL=stable
AUTO_UPDATE_CHECK_INTERVAL_SECONDS=3600
AUTO_UPDATE_SOURCE=github-releases
AUTO_UPDATE_REPOSITORY=org/monitoring
AUTO_UPDATE_ALLOW_MAJOR_UPGRADE=false

# Authentication
AUTH_PROVIDER=local
AUTH_JWT_SECRET=change_me_long_random_secret
AUTH_JWT_EXPIRES_IN=12h
AUTH_SESSION_ENABLED=true
AUTH_SESSION_COOKIE_NAME=monitoring_session
AUTH_SESSION_SECURE=false
AUTH_ADMIN_BOOTSTRAP_USERNAME=admin
AUTH_ADMIN_BOOTSTRAP_PASSWORD=change_me

# Plugins
PLUGINS_DIRECTORY=./plugins
PLUGINS_AUTO_DISCOVERY=true
PLUGINS_LOAD_ON_START=true
