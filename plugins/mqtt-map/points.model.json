{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "MqttMapPoint",
  "type": "object",
  "required": ["id", "x", "y", "icon", "color", "label", "sourceTopic"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Identifiant unique du point sur le plan"
    },
    "x": {
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "description": "Position horizontale en pourcentage"
    },
    "y": {
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "description": "Position verticale en pourcentage"
    },
    "icon": {
      "type": "string",
      "description": "Icône du point"
    },
    "color": {
      "type": "string",
      "description": "Couleur hexadécimale utilisée pour l'état visuel"
    },
    "label": {
      "type": "string",
      "description": "Libellé affiché dans l'UI"
    },
    "sourceTopic": {
      "type": "string",
      "description": "Topic MQTT source pour ce point"
    },
    "status": {
      "type": "string",
      "description": "Dernier état logique calculé"
    },
    "lastPayload": {
      "type": ["object", "array", "string", "number", "null"],
      "description": "Dernier payload reçu"
    },
    "lastUpdate": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Horodatage ISO de la dernière mise à jour"
    }
  }
}
